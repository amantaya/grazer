{
	"version": "2.0.0",
	"tasks": [
		{
			"type": "R",
			"code": [
				"devtools::test()"
			],
			"problemMatcher": [
				"$testthat"
			],
			"group": "build",
			"label": "R: Test"
		},
		{
			"type": "R",
			"code": [
				"testthat::test_file(\"${file}\")"
			],
			"problemMatcher": [
				"$testthat"
			],
			"group": "test",
			"label": "R: Test (Current File)"
		},
		{
			"type": "R",
			"code": [
				"testthat::test_dir('tests/testthat', reporter = 'progress')"
			],
			"problemMatcher": [
				"$testthat"
			],
			"group": "test",
			"label": "R: Test Directory"
		},
		{
			"type": "R",
			"code": [
				"devtools::check()"
			],
			"problemMatcher": [],
			"group": "build",
			"label": "R: Check Package"
		},
		{
			"type": "R",
			"code": [
				"devtools::build()"
			],
			"group": {
				"kind": "build",
				"isDefault": true
			},
			"problemMatcher": [],
			"label": "R: Build"
		},
		{
			"type": "R",
			"code": [
				"devtools::install(build_vignettes = TRUE)"
			],
			"problemMatcher": [],
			"group": "build",
			"label": "R: Install Package and Build Vignettes"
		},
	]
}